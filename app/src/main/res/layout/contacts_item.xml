<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.etzwallet.presenter.customviews.BRText
                android:id="@+id/contacts_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/token_icon"
                android:textColor="@color/gray"
                android:textSize="20sp"
                app:customTFont="CircularPro-Bold.otf" />

            <com.etzwallet.presenter.customviews.BRText
                android:id="@+id/contacts_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contacts_item_name"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/token_icon"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="18sp"
                app:customTFont="CircularPro-Book.otf" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>