<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_card"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/portfolio_label"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/admin_card_shape">

    <com.etzwallet.presenter.customviews.BRText
        android:id="@+id/add_wallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_wallets_add"
        android:drawablePadding="5dp"
        android:text="@string/TokenList.manageTitle"
        android:textColor="@color/gray"
        android:textSize="16sp" />


    <ImageButton
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_chevron_right" />


</RelativeLayout>

