<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:columnCount="3"
    app:orientation="horizontal"
    app:rowCount="4">

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:text="1"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="2"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="0"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="3"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num4"
        app:layout_column="0"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="4"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num5"
        app:layout_column="1"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="5"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num6"
        app:layout_column="2"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="6"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num7"
        app:layout_column="0"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="7"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num8"
        app:layout_column="1"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="8"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num9"
        app:layout_column="2"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="2"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="9"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/numDot"
        app:layout_column="0"
        app:layout_gravity="fill_horizontal"
        android:layout_margin="2px"
        app:layout_row="3"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="."
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <com.etzwallet.presenter.customviews.BRButton
        android:id="@+id/num0"
        app:layout_column="1"
        app:layout_gravity="fill_horizontal|fill_vertical"
        android:layout_margin="2px"
        app:layout_row="3"
        app:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="0"
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size"
        app:customBFont="CircularPro-Book.otf" />

    <ImageButton
        android:id="@+id/numDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_column="2"
        app:layout_gravity="fill_horizontal|fill_vertical"
        android:layout_margin="2px"
        app:layout_row="3"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_delete_gray"
        android:text=""
        android:textColor="@color/pin_pad_text"
        android:textSize="@dimen/pin_par_text_size" />

</android.support.v7.widget.GridLayout>
