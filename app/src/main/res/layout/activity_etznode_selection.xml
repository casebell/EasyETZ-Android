<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_set_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_light_blue_background"
    tools:context="com.etzwallet.presenter.activities.ETZNodeSelectionActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/node_back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_arrow_left" />


        <com.etzwallet.presenter.customviews.BRText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/My.ETZ.node.set"
            android:textColor="@color/almost_black"
            android:textSize="@dimen/header"
            app:customTFont="CircularPro-Bold.otf" />

        <ImageButton
            android:id="@+id/node_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_wallets_add" />
    </LinearLayout>

    <com.etzwallet.presenter.customviews.BRText
        android:id="@+id/etz_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/NodeSelector.nodeLabel"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title" />


    <com.etzwallet.presenter.customviews.BRText
        android:id="@+id/etz_node_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"
        android:text="..."
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etz_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etz_description" />

    <com.etzwallet.presenter.customviews.BRText
        android:id="@+id/etz_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/NodeSelector.statusLabel"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etz_node_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etz_node_text" />

    <com.etzwallet.presenter.customviews.BRText
        android:id="@+id/etz_node_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"
        android:text="..."
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etz_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etz_tv" />

    <LinearLayout
        android:id="@+id/ll_node_other"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/etz_node_status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etz_node_status">

        <com.etzwallet.presenter.customviews.BRText
            android:id="@+id/node_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/My.ETZ.node.other"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/sub_header"
            app:customTFont="CircularPro-Bold.otf" />

        <com.etzwallet.presenter.customviews.BRText
            android:id="@+id/node_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:gravity="center_vertical|right"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/NodeSelector.del.noderpc"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            app:customTFont="CircularPro-Bold.otf"
            android:visibility="gone"/>
    </LinearLayout>


    <ListView
        android:id="@+id/etz_node_lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:divider="#f5f5f5"
        android:dividerHeight="2px"
        android:paddingLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_node_other"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
